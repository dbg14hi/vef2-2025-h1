{
  "compilerOptions": {
    "outDir": "dist",   // ✅ Compiled files go to 'dist'
    "rootDir": "src",   // ✅ Source files are in 'src'
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
